{
    "name": "litebasedb/litebasedb-php",
    "authors": [
        {
            "name": "Thiery Laverdure",
            "email": "thiery@spacestud.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "LitebaseDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LitebaseDB\\Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "mockery/mockery": "^1.4"
    },
    "require-dev": {
        "illuminate/database": "^8.42|^9.0",
        "phpunit/phpunit": "^9.5.10"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
