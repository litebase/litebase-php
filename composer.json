{
    "name": "litebase/litebase-php",
    "authors": [
        {
            "name": "Thiery Laverdure",
            "email": "thiery@spacestud.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "Litebase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litebase\\Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../process"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.0",
        "mockery/mockery": "^1.4",
        "react/http": "^1.0",
        "spacestudio/process": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
